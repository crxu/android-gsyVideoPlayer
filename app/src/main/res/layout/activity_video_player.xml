<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">

    <com.gsgd.live.ui.widgets.CustomVideoView
        android:id="@+id/gsy_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/fl_bg_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pic_jiazaishibai" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:background="@drawable/bg_qrcode"
                android:padding="15dp"
                android:src="@drawable/icon_qrcode" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pic_beijing">

            <ImageView
                android:id="@+id/iv_weihu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/pic_weihujiemu" />

            <TextView
                android:id="@+id/tv_weihu_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_weihu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textColor="@color/color_ffffff"
                android:textSize="24sp" />
        </RelativeLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_margin="30dp"
        android:alpha="0.5"
        android:src="@drawable/ic_logo"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.gsgd.live.ui.widgets.PlayStatusView
        android:id="@+id/status_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="230dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.gsgd.live.ui.widgets.TvTimeView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:background="@drawable/bg_time"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="2dp"
        android:textColor="#F0F0F0"
        android:textSize="32sp"
        android:visibility="gone"
        tools:text="12:20:04"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_setting"
        android:textColor="#FFF"
        android:textSize="28sp"
        tools:visibility="visible" />

    <com.gsgd.live.ui.widgets.TvShowView
        android:id="@+id/view_tv_show"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_bg_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_bg_cover"
        android:visibility="visible"
        tools:visibility="gone" />

</FrameLayout>
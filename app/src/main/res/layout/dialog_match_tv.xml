<?xml version="1.0" encoding="utf-8"?>
<com.gsgd.live.tv.TvContentLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_match">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_match_head"
            android:gravity="center"
            android:text="为你找到以下栏目"
            android:textColor="#F5F5F5"
            android:textSize="25sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:overScrollMode="never"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbars="none" />

    </LinearLayout>

    <com.gsgd.live.tv.FlyFrameView
        android:id="@+id/fly_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</com.gsgd.live.tv.TvContentLayout>
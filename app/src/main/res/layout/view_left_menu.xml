<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#88000000"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_left_menu_bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_tvLive"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_live"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/icon_dianshi" />

            <TextView
                android:id="@+id/tv_live"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-10dp"
                android:gravity="center_vertical"
                android:paddingRight="33dp"
                android:text="电视直播"
                android:textColor="#F0F0F0"
                android:textSize="24sp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_phone_live"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_phone_live"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/icon_shoujiactive" />

            <TextView
                android:id="@+id/tv_phone_live"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-10dp"
                android:gravity="center_vertical"
                android:paddingRight="33dp"
                android:text="手机电视"
                android:textColor="#F0F0F0"
                android:textSize="24sp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_message"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:focusable="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_xiaoxi" />

                <ImageView
                    android:id="@+id/unread_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/unread_message_icon"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-10dp"
                android:gravity="center_vertical"
                android:paddingRight="33dp"
                android:text="消息通知"
                android:textColor="#F0F0F0"
                android:textSize="24sp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_custom"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_custom"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/icon_zijianactive" />

            <TextView
                android:id="@+id/tv_custom"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-10dp"
                android:gravity="center_vertical"
                android:paddingRight="33dp"
                android:text="自建频道"
                android:textColor="#F0F0F0"
                android:textSize="24sp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_setting"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/icon_shezhi" />

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-10dp"
                android:gravity="center_vertical"
                android:paddingRight="33dp"
                android:text="设置中心"
                android:textColor="#F0F0F0"
                android:textSize="24sp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
